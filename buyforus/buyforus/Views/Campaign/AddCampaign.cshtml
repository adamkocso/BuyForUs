@model AddCampaignViewModel

<div class="card">
    <form asp-action="AddCampaign" asp-controller="Campaign" method="post">
        <div class="card-block">
            <div class="form-header bg-light">
                <h3> Add new campaign:</h3>
            </div>
            <div class="md-form">
                <i class="prefix"></i>
                <input asp-for="Title" class="form-control">
                <label asp-for="Title">Title</label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="md-form">
                <i class="prefix"></i>
                <input asp-for="Description" class="form-control">
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" id="add-campaign">Save changes</button>
            </div>
        </div>
    </form>
</div>