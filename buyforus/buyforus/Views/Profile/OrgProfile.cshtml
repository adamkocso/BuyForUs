@model UserViewModel
@{
    ViewData["Title"] = "OrgProfile";
}

<h1>OrgProfile</h1>

<div>
    <div class="row">
        <div class="col-md-3">
            @if (Model.User.Uri == null)
            {
                <img src="images/org-default.png" />
            }
            else
            {
                <img src="@Model.User.Uri"/>
            }
        </div>
        <div class="col-md-9">
            <h3>@Model.User.CompanyName</h3>
            @*
            Ide kell egy if függvény
            *@
            <a class="btn btn-sm btn-outline-info" role="button" asp-controller="Profile" asp-action="EditDonaterProfile" asp-route-userId="@Model.User.Id">Edit</a>
            <span>Private informations</span>
            <ul>
                <li>@Model.User.RepresentativeName</li>
                <li>@Model.User.Headquarters</li>
                <li>@Model.User.TaxNumber</li>
            </ul>
        </div>
    </div>
    <p>Public informations</p>
    <div class="row">
        <div class="col-md-6">
            <h4>@Model.User.CharityType</h4>
            <p>@Model.User.Description</p>
        </div>
        <div class="col-md-6">
            <p>Contact informations</p>
            <ul>
                <li>@Model.User.Email</li>
                <li><a href="@Model.User.Website">@Model.User.CompanyName</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a href="#">My Campaign</a>
        </div>
        <div class="col-md-6">
            <h1>+</h1>
            <a href="#">Add Campaign</a>
        </div>
    </div>
</div>

